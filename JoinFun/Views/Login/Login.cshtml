@model JoinFun.Models.Acc_Pass

@{
    ViewBag.Title = "登入";
}

<h2 class="mt-5 text-center">登入</h2>
<div class="container " style="height:400px">

    <form id="login" class=" ml-5  " method="post" action="@Url.Action("Login")">
        <div class="row justify-content-center ">
            <div class="form-group ">
                <label class="col-md-12 col-form-label   col-sm-3" for="account">帳號:</label>
                <div class="col-md-12  col-sm-9">
                    <input id="account" name="account" type="text" class="form-control  " required placeholder="Enter Your Account...." />
                </div>
                <div>

                </div>
            </div>
        </div>
        <div class="row justify-content-center ">
            <div class="form-group ">

                <label class="col-md-12 col-form-label   col-sm-3" for="pass">密碼:</label>
                <div class="col-md-12  col-sm-9">
                    <input id="pass" name="pass" type="password" class="form-control  " required />
                    <small class="form-text text-muted">忘記密碼</small>
                </div>
                <div>

                </div>

            </div>
        </div>
        <div class="row justify-content-center mt-4">
            <h5 class="text-danger">@ViewBag.LoginErr</h5>
        </div>

        <div class="row justify-content-center mt-4">
            <div class="form-group form-check">
                <input id="remember" type="checkbox" class="form-check-input" />
                <label for="remember">記住我</label>
            </div>
            <div class="form-group">
                <div class="col-md-12 col-md-offset-3">
                    <input id="Submit1" type="submit" value="Login" class="btn btn-primary" />
                    <input id="Reset1" type="reset" value="reset" class="btn btn-light" />
                </div>
            </div>
        </div>

    </form>

</div>



