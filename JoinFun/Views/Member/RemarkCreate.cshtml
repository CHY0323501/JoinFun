@model JoinFun.Models.Member_Remarks
@section memberRemarks{
    <link href="~/CSS/Remark.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet" />
    <style>
       .star i {font-size:50px;}

    </style>
}

@{
    ViewBag.Title = "新增會員評價";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="form-horizontal">

            <h2 class="text-center  text-warning">新增@(ViewBag.actTop)活動會員評價</h2>
            <div class="">
                <div class="card d-inline">
                    <div class="card p-3 Remarkcard border-0 mb-4  pic1">
                        @*背景框線*@

                        <div class="row mb-1 align-items-center ">
                            @*align-items https://developer.mozilla.org/zh-CN/docs/Web/CSS/align-items*@

                            @*連動相片欄位*@
                            <div class="col col-md-4 border-right">
                                <div class="text-center">
                                    我是相片
                                </div>
                            </div>

                            @*填寫資料欄*@
                            <div class="col col-12 col-md-8 b-top">

                                @*選擇會員*@
                                <div class="form-group">
                                    <label class="text-success">請選擇會員</label>
                                    <div class="">
                                        @Html.DropDownListFor(model => model.ToMemId, ViewBag.MemList as SelectList, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                @*選擇星等*@
                                <div class="form-group">
                                    <label class="text-success">評價</label>
                                    <div class="star" id="star">
                                        <input id="starvalue" type="hidden" name="remarkStar"  value=1 />
                                      

                                    </div>
                                </div>
                                @*填寫內容*@
                                <div class="form-group">
                                    <label class="text-success ">評價內容</label>

                                    <div class="">
                                        @Html.TextArea("remarkContent", "", new { @class = "form-control", style = "resize:none" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="">
                                        @*<button>取消</button>*@
                                        <button type="submit" class="btn btn-info">新增評論</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script src="~/JS/stars.js"></script>
@section scripts{
    <script>

        $('#star').stars({
            value:1,
            stars: 5,
            click: function (index) {
                console.log(index);
                $('#starvalue').val(index-1);
            }
        });

    </script>
}