@model IEnumerable<JoinFun.Models.Member>
@{
    ViewBag.Title = "會員搜尋結果";
}
<style>
    .card-bg-search {
        background-image: url('../../Photos/leaves.png');
    }
</style>
<div class="container">
    <div class="row mt-5">
        @if (!Model.Any())
        {
            <div class="col-12">
                <h1 class="text-center ">
                    Sorry！No results found！<br />
                    Please confirm that the search content is incorrect.
                </h1>
            </div>
        }
        else
        {
            foreach (var i in Model)
            {
    
    <div class="col col-12 col-sm-6 col-md-4 mb-5">
        <a href="@Url.Action("Info","Member",new { memID=i.memId})" style="cursor:pointer" class="text-decoration-none ">
            <div class="card border-warning ">
                <div class="card-header text-center card-bg-search">
                    <img src="~/Photos/@(i.Sex == "M" ? "male.png" : "female.png")" class="img-fluid w-25 " />
                </div>
                <div class="card-body text-center">
                    <div class="row">
                        <div class="col col-12">
                            <div class="row">
                                <div class="col-5 text-success">
                                    會員編號
                                </div>
                                <div class="col-7 text-secondary">
                                    @i.memId
                                </div>
                            </div>
                        </div>
                        <div class="col col-12">
                            <div class="row">
                                <div class="col-5 text-success">
                                    會員暱稱
                                </div>
                                <div class="col-7 text-warning">
                                    @i.memNick
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
    
            }
        }
    </div>
</div>