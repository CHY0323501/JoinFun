@*@model IEnumerable<JoinFun.Models.Member_Remarks>*@
@model JoinFun.ViewModel.MemRemarkViewModel

@section memberRemarks{
    <link href="~/CSS/MemberRemarks.css" rel="stylesheet" />
}
@{
    ViewBag.Title = "會員評價";
}

<style>
    .p-adjust {
        padding-left: 10%;
        padding-right: 10%;
    }

    .w-35 {
        width: 35%;
    }

    .border-right {
        border-right: none !important;
    }

    @@media (min-width: 768px) {
        .border-right {
            border-right: 1px solid #dee2e6 !important;
        }
    }
    
    .b-top {
            border-top: 1px solid #dee2e6 !important;
        }

    @@media (min-width: 768px) {
        .b-top {
        border-top: none !important;
    }
    }
</style>

<div class="container containerMinH">
    <h2 class="mt-5 text-center p-3 text-warning">@(ViewBag.ToMemNick)的所有評價</h2>
    <div class="card text-center border-0 p-adjust">
        <div class="card-header bg-transparent text-white ">
            <div class="d-flex">
                <ul class="nav nav-tabs card-header-tabs mx-auto">
                    <li class="nav-item ">
                        <a class="nav-link active p-3 text-success" href="#tab1" data-toggle="tab"><strong>當主辦人的評價</strong></a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link p-3 text-decoration-none text-info " href="#tab2" data-toggle="tab"><strong>當參與者的評價</strong></a>
                    </li>
                </ul>
            </div>

        </div>
        <div class="tab-content" >
            <div class="card-body tab-pane show active fade " id="tab1">
                
                @foreach (var i in Model.vw_Host_Remarks)
                {
                <div class="card p-3 ">
                    <div class="row mb-1 align-items-center">
                        <div class="col col-12 col-md-5 border-right ">
                            <div class="border-bottom mb-3 pb-2 pl-3"><img src="~/Photos/@(i.Sex == "M" ? "male.png" : "female.png")" class="img-fluid w-35 " /></div>
                            <div class="row mx-auto ">
                                <div class="col-12 col-md-6 text-center mb-3 mb-md-0">
                                    <div class="text-success mb-1 ">會員編號</div><div class="text-warning ">@i.FromMemId</div>
                                </div>
                                <div class="col-12 col-md-6 text-center ">
                                    <div class="text-success mb-1">會員暱稱</div><div class="text-warning">@i.memNick</div>
                                </div>
                            </div>
                        </div>
                       
                        <div class="col col-12 col-md-7 b-top p-2 pl-3 ">
                            <div class="row text-left mt-3 ">
                                <div class="col-12 col-md-6">評價編號　@i.remarkSerial</div><div class="col-12 col-md-6">活動編號　@i.actId</div>
                            </div>
                            <div class="row text-left mt-md-1">
                                <div class="col-12 col-md-6 align-self-center">評價時間　@i.remarkTime</div><div class="col-12 col-md-6  ">
                                    <div class="row ">
                                        <div class="col col-3 ">星等</div>
                                        <div class="col col-9 ">
                                            @for (int j = 1; j <= i.remarkStar; j++)
                                            {
                                                <img src="~/Photos/star.png" class="img-fluid" style="width:20px" />
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-md-1">
                                <div class="col col-12 col-md-3 border text-left" >評價內容</div>
                                <div class="col col-12 col-md-9" ></div>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
            <div class="card-body tab-pane fade " id="tab2">
                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            </div>
        </div>
    </div>
</div>

