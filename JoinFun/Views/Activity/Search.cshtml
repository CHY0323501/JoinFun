<div class="container mt-5">
    <!--輪播圖-->

    <header class="container-fluid d-none d-md-block">
        <div id="carousel" class="carousel slide " data-ride="carousel">

            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active bg_carousel " style="background-image:url('../../Photos/banner/Join Fun.png')">

                </div>
                <div class="carousel-item bg_carousel" style="background-image:url('../../Photos/banner/Join Fun (1).png')">

                </div>
                <div class="carousel-item bg_carousel" style="background-image:url('../../Photos/banner/christmas.png')">

                </div>
            </div>
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </header>
    <span class="appearsearch"><span class="fa fa-search"></span></span>
    <div id="finalchoose ">

        @using (Html.BeginForm("FinalChoose", "Activity", FormMethod.Get, htmlAttributes: new { @id = "form" }))
        {
            <nav class="row flex-lg-nowrap">
                <div class="col-12 col-lg-auto col-md-3 ">
                    <label class="choice ">活動類別</label><br />
                    @Html.DropDownListFor(m => m.joinfunlist.FirstOrDefault().actClassId, ViewBag.Activity_Class as SelectList, htmlAttributes: new { @class = "form-control-sm sel" })
                </div>
                <div class="col-12 col-lg-auto  col-md-3 ">
                    <label class="choice  ">年齡限制</label><br />
                    @Html.DropDownListFor(m => m.joinfunlist.FirstOrDefault().ageRestrict, ViewBag.Age_Restriction as SelectList, htmlAttributes: new { @class = "form-control-sm sel " })
                </div>
                <div class="col-12 col-lg-auto  col-md-3 ">
                    <label class="choice ">性別限制</label><br />
                    @Html.DropDownListFor(m => m.joinfunlist.FirstOrDefault().gender, ViewBag.Gender_Restriction as SelectList, htmlAttributes: new { @class = "form-control-sm sel" })
                </div>
                <div class="col-12 col-lg-auto  col-md-3 ">
                    <label class="choice ">人數上限</label><br />
                    @Html.DropDownListFor(m => m.joinfunlist.FirstOrDefault().maxNumPeople, ViewBag.People_Restriction as SelectList, htmlAttributes: new { @class = "form-control-sm sel" })
                </div>
                <div class="col-12 col-lg-auto  col-md-3 ">
                    <label class="choice ">預算上限</label><br />
                    @*@Html.DropDownListFor(m => m.joinfunlist.FirstOrDefault().maxBudget, ViewBag.Budget_Restriction as SelectList, htmlAttributes: new { @class = "form-control-sm sel" })*@
                    @Html.DropDownList("maxBudget", null, htmlAttributes: new { @class = "form-control-sm sel" })
                </div>
                <div class="col-12 col-lg-auto  col-md-3 ">
                    <label class="choice ">付款方式</label><br />
                    @Html.DropDownListFor(m => m.joinfunlist.FirstOrDefault().paymentTerm, ViewBag.Payment_Restriction as SelectList, htmlAttributes: new { @class = "form-control-sm sel " })
                </div>
                <div class="col-12 col-lg-auto col-md-3 ">
                    <label class="choice ">縣市地區</label><br />
                    @Html.DropDownListFor(m => m.joinfunlist.FirstOrDefault().actCounty, ViewBag.County as SelectList, htmlAttributes: new { @id = "county", @class = "form-control-sm sel" })
                </div>
                <div class=" col-lg-auto  col-md-2 mt-md-1 ">
                    <br />
                    <input type="submit" value="進行篩選" class="btn btn-warning btn-sm  " id="choosebtn" />
                </div>
            </nav>
        }

    </div>

    <div>
        <h2 id="index_title" class="pl-2 mt-1">揪團活動</h2>

        <form class="form-inline form-row  mt-2" method="get" action="/Activity/Search">
            <input class="form-control  col-5 ml-auto indexsearch " type="search" placeholder="查詢活動關鍵字" name="keyword">
            <button class="btn btn-outline-secondary   col-2 ml-1 " type="submit">查詢</button>
        </form>

    </div>

    <article class="main w-75">
        <div class="row">


            @if (Model.vwActList.Count() == 0)
            {<p class="nodata">Sorry,No Data!!</p>
                <img src="~/Photos/oops.png" class="m-auto" />


            }
            else
            {



                foreach (var item in Model.vwActList)

                {
                    <input type="hidden" id="act" value="@item.actId" />
                    <input type="hidden" id="acttime" value="@item.actTime" />


                    var address = @item.CountyName + item.DistrictName;

                    <div class="col-md-6 col-sm-6 col-lg-4 justify-content-around">

                        <div id="act" class="view view-first ">

                            @if (item.actId != null)
                            {
                                <a href="@Url.Action("Details", new { actId = item.actId, memID = Session["memid"] })"><img src="@Url.Action("GetIndexPhoto", "Activity", new { actId = item.actId, actClassId = item.actClassId })" style="height:220px" /></a>

                            }


                            <div class="mask">

                                <h2>@Html.ActionLink(item.actTopic, "Details", new { actId = item.actId, memID = Session["memid"] })</h2>
                                @*<span class="sub">活動時間：@Html.DisplayFor(modelItem => item.actTime)</span>*@
                                <span class="s-title d-block">活動時間：@item.actTime.ToShortDateString()</span>
                                @*<span class="sub">截止時間：@Html.DisplayFor(modelItem => item.actDeadline)</span>*@
                                <span class="s-title d-block mt-2">截止時間：@item.actDeadline.ToShortDateString()</span>
                                <span class="s-title w-100 d-block mt-2">地點：@address</span>



                                @if (Session["memid"].ToString().IsEmpty())
                                {
                                    @Html.ActionLink("詳情", "Details", new { actId = item.actId }, new { @class = "btn btn-secondary btnbg" })
                                }
                                else
                                {
                                    @Html.ActionLink("詳情", "Details", new { actId = item.actId, memID = Session["memid"] }, new { @class = "btn btn-secondary btnbg" })

                                }

                            </div>
                        </div>

                    </div>

                }
            }
        </div>
    </article>

</div>



