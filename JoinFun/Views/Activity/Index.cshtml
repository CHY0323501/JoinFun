@section indexcss {

    <link href="~/CSS/index_fun.css" rel="stylesheet" />
    <link href="~/CSS/Newcard/demo.css" rel="stylesheet" />
    <link href="~/CSS/Newcard/reset.css" rel="stylesheet" />
    <link href="~/CSS/Newcard/style_common.css" rel="stylesheet" />
