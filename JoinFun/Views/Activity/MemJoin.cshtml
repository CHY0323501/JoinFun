@model IEnumerable<JoinFun.Models.vw_Member_Join>
@{
    int i = 1;
}


@section indexcss {

    <link href="~/CSS/index_fun.css" rel="stylesheet" />
   
}

<table class="table table-hover mt-5">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">@Html.DisplayNameFor(m => m.memNick)</th>
            <th scope="col">@Html.DisplayNameFor(m => m.Sex)</th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {

            foreach (var item in Model)
            {

                <tr>

                    <td scope="row">@i</td>
                    <td>@Html.ActionLink(@item.memNick, "Info", "Member", new { memID = @item.memId }, "null")</td>
                    <td> <img src="~/Photos/@(item.Sex == "M" ? "male.png" : "female.png")" style="width:60px" /></td>

                </tr>
                i++;

            }
        }
        else
        {
            <tr>
                <td>

                </td>
                <td>
                    <p class="nodata ml-5"> Hi,You would be the first one!! </p>
                  
                </td>
            </tr>
        }

    </tbody>
</table>

