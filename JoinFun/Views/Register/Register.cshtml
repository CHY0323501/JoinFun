                        </select>

                    </div>


                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.memDistrict, htmlAttributes: new { @class = "control-label col-md-2" })
                        @*@Html.DropDownList("memDistrict", null, htmlAttributes: new { @class = "form-control" })*@
