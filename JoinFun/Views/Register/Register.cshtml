<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section scripts{
    <script>

        $('#memCounty').change(function () {
            $('#memDistrict').empty();
            $.ajax({
                type: "Get",
                url: "http://localhost:54129/api/getDistrict?countyNo=" + $('#memCounty').val(),
                success: function (d) {
                    console.log(d);
                    d.forEach(function (currentValue, index, array) {
                        if (index % 2 != 0) {
                            $('#memDistrict').append("<option value='" + array[index - 1] + "'>" + currentValue + "</option>");
                        }
                    });
                }
            });
        });


        //驗證:Email、memNick、Password
        var rex = /^\w+((-\w+)|(\.\w+))*\[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z]+$/;
        var flag = false;

        $('#login').submit(function () {

            if ($('#Email').val() == "") {
                $('#Email').addClass("is-invalid");
                $('#Email~div').addClass('invalid-feedback').text('請輸入Email!');
                flag = false;
            }


            if ($('#memNick').val() == "") {
                $('#memNick').addClass("is-invalid");
                $('#memNick~div').addClass("invalid-feedback").text('請輸入暱稱!');
                flag = false;
            }

            if ($('#Password').val() == "") {
                $('#Password').addClass("is-invalid");
                $('#Password~div').addClass("invalid-feedback").text('請輸入Email!');
                flag = false;
            }


            if (!flag)
                return false;

            return true;
        });

        $('#Email').keyup(function () {
            if (!rex.test($('#Email').val())) {
                $('#Email').addClass("is-invalid");
                $('#Email~div').addClass("invalid-feedback").text('E-mail格式錯誤!!');
                flag = false;
            }
            else {
                $('#Email').removeClass("is-invalid").addClass("is-valid");
                $('#Email~div').removeClass("invalid-feedback").addClass("valid-feedback").text('OK');
                flag = true;
            }

        });


        $('#Password').keyup(function () {
            if ($('#Password').val().length < 8) {
                $('#Password').addClass("is-invalid");
                $('#Password~div').addClass("invalid-feedback").text('至少8個字元!!');
                flag = false;
            }
            else {
                $('#Password').removeClass('is-invalid').addClass("is-valid");
                $('#Password~div').removeClass("invalid-feedback").addClass("valid-feedback").text('OK');
                flag = true;
            }
        });

        $('#memNick').keyup(function () {
            if ($('#memNick').val() >= 15) {
                $('#memNick').addClass("is-invalid");
                $('#memNick~div').addClass('invalid-feedback').text('最多15個字!');
                flag = false;
            }
            else {
                $('#memNick').remove('is-invalid').addClass('is-valid');
                $('#memNick~div').remove('invalid-feedback').addClass('valid-feedback').text('ok');
                flag = true;
            }

        });

    </script>




